" Set vundle
set nocompatible
filetype off

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

" Let Vundle manage Vundle
" required!
Bundle 'gmarik/vundle'

" Install bundles you want
Bundle 'scrooloose/nerdtree'
Bundle 'klen/python-mode'
Bundle 'StanAngeloff/php.vim'
Bundle 'phpcomplete.vim'
Bundle 'mileszs/ack.vim'
Bundle 'JulesWang/css.vim'
Bundle 'L9'
Bundle 'FuzzyFinder'
Bundle 'Lokaltog/powerline', {'rtp':'powerline/bindings/vim/'}
Bundle 'tpope/vim-surround'
Bundle 'Lokaltog/vim-easymotion'
Bundle 'msanders/snipmate.vim'
Bundle 'scrooloose/syntastic'
Bundle 'phtml.vim'
Bundle 'tomtom/tcomment_vim'
Bundle 'tristen/vim-sparkup'
Bundle 'kchmck/vim-coffee-script'
Bundle 'joonty/vdebug.git'
Bundle 'ervandew/supertab'
Bundle 'davidhalter/jedi-vim'
Bundle 'django.vim'

filetype plugin indent on

" ~ files is anonying
set nobackup

" use molokai as the default color scheme
" colorscheme candy
colorscheme molokai

set number "Display line number
set expandtab "replace tab into spaces
set tabstop=4 "tab width 
set shiftwidth=4 " indent operation
set autoindent

" Set shortcuts to NERDTree
map <C-n> :NERDTreeToggle<CR>
" ignore .pyc files in NERDTree
let NERDTreeIgnore = ['\.pyc$']

" Set shortcuts to FuzzyFinder
nnoremap <Leader>f :FufFile <CR>

" Set encoding
let &termencoding=&encoding 
set fileencodings=utf-8,gbk,ucs-bom,cp936

" Powerline setup
set laststatus=2

" Set ctags
set tags=./tags;/

" Set python lint checker to pyflakes
let g:pymode_lint_checker="pyflakes"

" Shortcut for jedi completion
let g:pymode_rope = 0
